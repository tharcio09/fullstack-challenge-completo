FROM node:18-alpine

WORKDIR /app

# Copiar package.json e package-lock.json
COPY challenge-backend/package*.json ./

# Instalar dependências
RUN npm ci --only=production

# Copiar código fonte
COPY challenge-backend/ ./

# Expor porta
EXPOSE 4000

# Comando para iniciar a aplicação
CMD ["npm", "start"]
